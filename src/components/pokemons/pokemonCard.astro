---

//creamos la interface de las propiedades obligatorias.
interface Props{
    url: string;
    name: string;
    isBig?: boolean;
}

const {name, url, isBig = false} = Astro.props;
const id = url.split('/').at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png` 
---

<!-- class=`rounded flex flex-col justify-center items-center p-2 ${!isBig && 'border'}` -->

<a  href={`/pokemons/${name}`} class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
        border: !isBig
    }
]}>
   
    <img transition:name={`${name}-image`} src={imageSrc} alt={name} class:list={[
        {
            'w-26 h26': isBig,
            'w-22 h-22': !isBig
        }]} />

    <span class="capitalize" class:list={[
        {
            'text-3xl': isBig
        }
    ]}>#{id} {name}</span>
</a>
